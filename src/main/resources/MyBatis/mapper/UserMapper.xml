<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foxconn.bidding.mapper.UserMapper">
    <!-- 通過用戶名查找用戶 -->
    <select id="findUserByUsername" parameterType="String" resultType="com.foxconn.bidding.model.User">
        select t.* from USER_ACUNT t where t.username = #{username}
    </select>

    <!-- 通過id查找用戶 -->
    <select id="findUserById" parameterType="String" resultType="com.foxconn.bidding.model.User">
        select t.* from USER_ACUNT t where t.pkid = #{id}
    </select>

    <!-- 注釋template,在最後一行 -->
</mapper>